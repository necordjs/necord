{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"noUnusedLocals": false,
		"importHelpers": true,
		"removeComments": false,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"useUnknownInCatchVariables": false,
		"target": "ES2021",
		"sourceMap": false,
		"allowJs": false,
		"outDir": "./dist",
		"baseUrl": ".",
		"forceConsistentCasingInFileNames": true,
		"strictPropertyInitialization": false,
		"types": ["node"]
	},
	"include": [
		"src/**/*",
		"**/*.spec.ts",
		"**/*.test.ts",
		"test/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
