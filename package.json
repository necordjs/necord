{
	"name": "necord",
	"description": "A module for creating Discord bots using NestJS, based on Discord.js",
	"version": "6.11.2",
	"scripts": {
		"build": "rimraf dist && tsc -p tsconfig.build.json",
		"prepublish:npm": "npm run build",
		"publish:npm": "release-it",
		"prepublish:dev": "npm run build",
		"publish:dev": "npm publish --access public --tag dev",
		"prepare": "husky",
		"postinstall": "opencollective",
		"format": "prettier --write \"{src,apps,libs,test}/**/*.ts\"",
		"lint": "eslint --ignore-pattern .gitignore \"{src,apps,libs,test}/**/*.ts\"",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:ci": "jest --ci --passWithNoTests --coverage"
	},
	"lint-staged": {
		"*.ts": [
			"npm run format",
			"npm run test:ci"
		]
	},
	"directories": {
		"lib": "src",
		"test": "test"
	},
	"funding": {
		"type": "opencollective",
		"url": "https://opencollective.com/necord"
	},
	"collective": {
		"type": "opencollective",
		"url": "https://opencollective.com/necord",
		"donation": {
			"text": "Become a financial contributor:"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"keywords": [
		"nest",
		"nestjs",
		"nestjs-module",
		"discord",
		"discordjs",
		"discord bot",
		"discord bot api",
		"bot",
		"bot api",
		"bot framework"
	],
	"license": "MIT",
	"homepage": "https://necord.org",
	"repository": {
		"type": "git",
		"url": "https://github.com/necordjs/necord"
	},
	"bugs": {
		"url": "https://github.com/necordjs/necord/issues"
	},
	"author": "Alexey Filippov <socket.someone@gmail.com>",
	"contributors": [
		"Alexey Filippov <socket.someone@gmail.com>"
	],
	"dependencies": {
		"@nuxt/opencollective": "^0.4.1",
		"path-to-regexp": "8.3.0",
		"tslib": "^2.8.1"
	},
	"devDependencies": {
		"@commitlint/cli": "20.1.0",
		"@commitlint/config-angular": "20.0.0",
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.18.0",
		"@favware/npm-deprecate": "2.0.0",
		"@nestjs/common": "11.1.8",
		"@nestjs/core": "^11.1.6",
		"@nestjs/testing": "^11.1.0",
		"@release-it/conventional-changelog": "^10.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "24.10.0",
		"discord-api-types": "0.38.31",
		"discord.js": "14.24.2",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-prettier": "5.5.4",
		"globals": "^16.0.0",
		"husky": "9.1.7",
		"jest": "^30.1.2",
		"lint-staged": "16.2.6",
		"prettier": "3.6.2",
		"reflect-metadata": "0.2.2",
		"release-it": "19.0.5",
		"rimraf": "6.1.0",
		"rxjs": "7.8.2",
		"ts-jest": "^29.3.2",
		"ts-node": "10.9.2",
		"typescript": "5.9.3",
		"typescript-eslint": "^8.21.0"
	},
	"peerDependencies": {
		"@nestjs/common": "^10.2.0 || ^11.0.0",
		"@nestjs/core": "^10.2.0 || ^11.0.0",
		"discord-api-types": "^0.37.99",
		"discord.js": "^14.0.1",
		"reflect-metadata": "^0.2.1",
		"rxjs": "^7.2.0"
	},
	"engines": {
		"node": ">=18",
		"npm": ">=8.6.0"
	}
}
