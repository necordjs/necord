{
	"name": "necord",
	"description": "A module for creating Discord bots using NestJS, based on Discord.js",
	"version": "6.8.6",
	"scripts": {
		"build": "rimraf dist && tsc -p tsconfig.build.json",
		"prepublish:npm": "npm run build",
		"publish:npm": "release-it",
		"prepublish:dev": "npm run build",
		"publish:dev": "npm publish --access public --tag dev",
		"prepare": "husky",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint --ignore-path .gitignore src/**/*.ts",
		"changelog": "git cliff --prepend ./CHANGELOG.md -l --current -c ./cliff.toml -r ."
	},
	"lint-staged": {
		"*.ts": "npm run format"
	},
	"directories": {
		"lib": "src",
		"test": "test"
	},
	"funding": {
		"type": "opencollective",
		"url": "https://opencollective.com/necord"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"keywords": [
		"nest",
		"nestjs",
		"nestjs-module",
		"discord",
		"discordjs",
		"discord bot",
		"discord bot api",
		"bot",
		"bot api",
		"bot framework"
	],
	"license": "MIT",
	"homepage": "https://necord.org",
	"repository": {
		"type": "git",
		"url": "https://github.com/necordjs/necord"
	},
	"bugs": {
		"url": "https://github.com/necordjs/necord/issues"
	},
	"author": "Alexey Filippov <socket.someone@gmail.com>",
	"contributors": [
		"Alexey Filippov <socket.someone@gmail.com>"
	],
	"dependencies": {
		"path-to-regexp": "8.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "19.6.1",
		"@commitlint/config-angular": "19.7.0",
		"@favware/npm-deprecate": "2.0.0",
		"@nestjs/common": "10.4.15",
		"@nestjs/core": "10.4.15",
		"@types/node": "22.10.5",
		"@typescript-eslint/eslint-plugin": "7.0.0",
		"@typescript-eslint/parser": "6.21.0",
		"discord-api-types": "0.37.115",
		"discord.js": "14.17.2",
		"eslint": "8.57.1",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-prettier": "5.2.1",
		"husky": "9.1.7",
		"lint-staged": "15.3.0",
		"prettier": "3.4.2",
		"reflect-metadata": "0.2.2",
		"release-it": "18.0.0",
		"rimraf": "6.0.1",
		"rxjs": "7.8.1",
		"ts-node": "10.9.2",
		"typescript": "5.7.2"
	},
	"peerDependencies": {
		"@nestjs/common": "^10.2.0",
		"@nestjs/core": "^10.2.0",
		"discord.js": "^14.0.1",
		"discord-api-types": "^0.37.99",
		"reflect-metadata": "^0.2.1",
		"rxjs": "^7.2.0"
	},
	"engines": {
		"node": ">=18",
		"npm": ">=8.6.0"
	}
}
